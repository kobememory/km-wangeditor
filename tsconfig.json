{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "lib": [
      "ES2015",
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
  ]
}